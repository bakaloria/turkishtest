      report += `<b>Ø§Ù„ÙˆÙ‚Øª:</b> ${new Date().toLocaleTimeString('ar-EG')}\n\n`;
      report += `<b>Ø§Ù„Ù†ØªÙŠØ¬Ø© Ø§Ù„Ù†Ù‡Ø§Ø¦ÙŠØ©:</b> <u>${Math.round((totalCorrect / totalQuestions) * 100)}%</u> (${totalCorrect}/${totalQuestions})\n\n`;
      
      report += `<b>ØªÙØµÙŠÙ„ Ø§Ù„Ø£Ù‚Ø³Ø§Ù…:</b>\n`;
      for (let i = 1; i <= 6; i++) {
        if (groupResults[i]) {
          report += `- <b>${groupResults[i].name}:</b> ${groupResults[i].correct}/${groupResults[i].total} (<i>${groupResults[i].percentage}%</i>)\n`;
        }
      }
      
      report += `\n<b>Ø§Ù„Ø¥Ø¬Ø§Ø¨Ø§Øª Ø§Ù„Ø®Ø§Ø·Ø¦Ø©:</b>\n`;
      if (groupResults.wrongAnswers && groupResults.wrongAnswers.length > 0) {
        groupResults.wrongAnswers.forEach((item, index) => {
          report += `\nâŒ <b>Ø§Ù„Ø³Ø¤Ø§Ù„ ${index + 1}:</b> ${item.question}\n`;
          report += `   - <i>Ø¥Ø¬Ø§Ø¨ØªÙƒ:</i> ${item.userAnswer}\n`;
          report += `   - <i>Ø§Ù„Ø¥Ø¬Ø§Ø¨Ø© Ø§Ù„ØµØ­ÙŠØ­Ø©:</i> ${item.correctAnswer}\n`;
          report += `   - <i>Ø§Ù„Ù‚Ø³Ù…:</i> ${item.section}\n`;
        });
      } else {
        report += `Ù„Ø§ ØªÙˆØ¬Ø¯ Ø¥Ø¬Ø§Ø¨Ø§Øª Ø®Ø§Ø·Ø¦Ø©! ğŸ‰\n`;
      }
      
      const telegramData = {
        chat_id: telegramChannelId,
        text: report,
        parse_mode: 'HTML'
      };
      
      // Send to Telegram channel
      fetch(`https://api.telegram.org/bot${telegramBotToken}/sendMessage`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(telegramData)
      })
      .then(response => response.json())
      .then(data => {
        console.log('ØªÙ… Ø¥Ø±Ø³Ø§Ù„ Ø§Ù„Ù†ØªØ§Ø¦Ø¬ Ø¥Ù„Ù‰ Ù‚Ù†Ø§Ø© Ø§Ù„ØªÙ„ÙŠØ¬Ø±Ø§Ù…:', data);
      })
      .catch(error => {
        console.error('Ø®Ø·Ø£ ÙÙŠ Ø§Ù„Ø¥Ø±Ø³Ø§Ù„ Ø¥Ù„Ù‰ Ù‚Ù†Ø§Ø© Ø§Ù„ØªÙ„ÙŠØ¬Ø±Ø§Ù…:', error);
      });
    }

    function restartTest() {
      currentGroup = 0;
      currentQuestionIndex = 0;
      userAnswers = {};
      testData = {};
      groupResults = {};
      
      document.getElementById('userName').value = '';
      
      document.querySelectorAll('.section').forEach(section => {
        section.classList.remove('active');
      });
      document.getElementById('intro').classList.add('active');
      
      // Reload a new wisdom quote
      loadWisdomQuotes();
    }
    
    function createConfetti() {
      for (let i = 0; i < 100; i++) {
        const confetti = document.createElement('div');
        confetti.className = 'confetti';
        confetti.style.left = Math.random() * 100 + 'vw';
        confetti.style.backgroundColor = getRandomColor();
        confetti.style.animationDuration = (Math.random() * 3 + 2) + 's';
        confetti.style.animationDelay = Math.random() * 5 + 's';
        document.body.appendChild(confetti);
        
        setTimeout(() => {
          confetti.remove();
        }, 7000);
      }
    }
    
    function getRandomColor() {
      const colors = ['#4CAF50', '#8BC34A', '#FFC107', '#FF9800', '#F44336', '#9C27B0', '#3F51B5'];
      return colors[Math.floor(Math.random() * colors.length)];
    }
    
