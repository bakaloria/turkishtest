    function startTest() {
      userName = document.getElementById('userName').value.trim();
      if (!userName) {
        alert("Ø§Ù„Ø±Ø¬Ø§Ø¡ Ø¥Ø¯Ø®Ø§Ù„ Ø§Ø³Ù…Ùƒ");
        return;
